to_french: to_french {
	label = "to_french";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LSHFT>
                , <&macro_tap &kp CAPS>
                , <&macro_release &kp LSHFT>
                , <&macro_tap &to FRENCH>
                ;
}

